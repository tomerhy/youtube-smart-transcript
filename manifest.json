{
  "manifest_version": 3,
  "name": "YouTube Smart Transcript",
  "version": "1.2.0",
  "description": "Extract, view, and export YouTube video transcripts. Copy to clipboard or download as TXT, SRT, or Markdown.",
  "author": "THY Production",
  "homepage_url": "https://github.com/tomerhy/youtube-smart-transcript",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.google-analytics.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["analytics.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/avatar.png"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
